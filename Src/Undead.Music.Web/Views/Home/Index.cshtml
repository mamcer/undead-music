@model Undead.Music.Web.Models.IndexViewData

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Hosts.First().Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Hosts)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Select", "Index", "Host", new { id = item.Id }, null)
            </td>
        </tr>
    }
</table>