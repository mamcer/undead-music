<Window x:Class="Undead.Music.Player.ErrorWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Soulstone Player"
    Height="305"
    Width="618"
    WindowStartupLocation="CenterScreen"
    ShowInTaskbar="False">
    <Grid>
        <TextBox IsEnabled="True" IsReadOnly="True" Margin="10,5,8,49" Name="txtErrorText" TextDecorations="None" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
        <Label Cursor="Hand" Foreground="Blue" Height="28" Margin="10,0,432,21" Name="lblCopyToClipboard" VerticalAlignment="Bottom" MouseLeftButtonDown="lblCopyToClipboard_MouseLeftButtonDown">Copy to Clipboard</Label>
        <Button Height="23" HorizontalAlignment="Right" Margin="0,0,10,8" Name="btnOk" VerticalAlignment="Bottom" Width="75" Click="btnOk_Click">Ok</Button>
    </Grid>
</Window>
